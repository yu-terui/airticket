<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
        <title>Airline航空 - 会員登録</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.0/css/bootstrap-reboot.min.css">
        <link type="text/css" rel="stylesheet" href="../assets/css/style.css">
    </head>
    <body id="member_register">
        <header>
            <div class="container">
                <div class="flex">
                    <h1><a href="/">AIRLINE</a></h1>
                    <nav>
                        <ul>
                            <li><a href="/">予約</a></li>
                            <li><a href="/member_login">ログイン</a></li>
                            <li><a href="/member_register">会員登録</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <main>
            <div class="container">
                <h2>新規会員登録</h2>
                <form action="/member_register_complete" method="post">
                    <label for="familyname">お名前（姓）</label><input type="text" id="familyname" name="familyname" placeholder="例：ヤマダ">
                    <p id="familyname_alert"></p>
                    <label for="firstname">お名前（名）</label><input type="text" id="firstname" name="firstname" placeholder="例：タロウ">
                    <p id="firstname_alert"></p>
                    <label for="age">ご年齢</label><input type="text" id="age" name="age" placeholder="例：25">
                    <p id="age_alert"></p>
                    <input type="radio" value="male" id="male" name="sex" checked><label for="male">男性</label>
                    <input type="radio" value="female" id="female" name="sex"><label for="female">女性</label>
                    <p id="sex_alert"></p>
                    <label for="email">メールアドレス</label><input type="text" id="email" name="email" placeholder="例：example@example.com">
                    <p id="email_alert"></p>
                    <label for="password">パスワード</label><input type="password" id="password" name="password" placeholder="">
                    <p id="password_alert"></p>
                    <button id="register_btn">登録</button>
                </form>
            </div>
        </main>
        <footer>
            <div class="container">
                <small>Copyright &copy; 2024 Airline. All rights reserved.</small>
            </div>
        </footer>
        <script type="text/javascript">
            //id取得
            let register_btn = document.getElementById("register_btn");
            let familyname = document.getElementById("familyname");
            let firstname = document.getElementById("firstname");
            let age = document.getElementById("age");
            let email = document.getElementById("email");
            let password = document.getElementById("password");
            let familyname_alert = document.getElementById("familyname_alert");
            let firstname_alert = document.getElementById("firstname_alert");
            let age_alert = document.getElementById("age_alert");
            let email_alert = document.getElementById("email_alert");
            let password_alert = document.getElementById("password_alert");
            register_btn.addEventListener("click", function () {
                //姓
                if (familyname.value.match(/[^ァ-ヴー]/)) {
                    familyname_alert.textContent = "全角カタカナで入力してください";
                    familyname_alert.style.color = "#f00";
                    familyname.style.borderColor = "#f00";
                    event.preventDefault();
                } else if (!familyname.value) {
                    familyname_alert.textContent = "入力してください";
                    familyname_alert.style.color = "#f00";
                    familyname.style.borderColor = "#f00";
                    event.preventDefault();
                } else {
                    familyname_alert.textContent = "";
                    familyname.style.borderColor = "#333";
                }
                //名
                if (firstname.value.match(/[^ァ-ヴー]/)) {
                    firstname_alert.textContent = "全角カタカナで入力してください";
                    firstname_alert.style.color = "#f00";
                    firstname.style.borderColor = "#f00";
                    event.preventDefault();
                } else if (!firstname.value) {
                    firstname_alert.textContent = "入力してください";
                    firstname_alert.style.color = "#f00";
                    firstname.style.borderColor = "#f00";
                    event.preventDefault();
                } else {
                    firstname_alert.textContent = "";
                    firstname.style.borderColor = "#333";
                }
                //年齢
                if (age.value.match(/[^0-9]/)) {
                    age_alert.textContent = "数字を入力してください";
                    age_alert.style.color = "#f00";
                    age.style.borderColor = "#f00";
                    event.preventDefault();
                } else if (!age.value) {
                    age_alert.textContent = "入力してください";
                    age_alert.style.color = "#f00";
                    age.style.borderColor = "#f00";
                    event.preventDefault();
                } else {
                    age_alert.textContent = "";
                    age.style.borderColor = "#333";
                }
                //メールアドレス
                if (email.value.match(/[^a-zA-Z0-9!-/:-@¥[-`{-~]/)) {
                    email_alert.textContent = "半角英数字・記号で入力してください";
                    email_alert.style.color = "#f00";
                    email.style.borderColor = "#f00";
                    event.preventDefault();
                } else if (!email.value) {
                    email_alert.textContent = "入力してください";
                    email_alert.style.color = "#f00";
                    email.style.borderColor = "#f00";
                    event.preventDefault();
                } else {
                    email_alert.textContent = "";
                    email.style.borderColor = "#333";
                }
                //パスワード
                if (password.value.match(/[^a-zA-Z0-9]/)) {
                    password_alert.textContent = "半角英数字で入力してください";
                    password_alert.style.color = "#f00";
                    password.style.borderColor = "#f00";
                    event.preventDefault();
                } else if (!password.value) {
                    password_alert.textContent = "入力してください";
                    password_alert.style.color = "#f00";
                    password.style.borderColor = "#f00";
                    event.preventDefault();
                } else {
                    password_alert.textContent = "";
                    password.style.borderColor = "#333";
                }
            })
        </script>
    </body>
</html>
